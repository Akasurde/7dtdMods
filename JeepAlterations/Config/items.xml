<configs>
	<append xpath="/items">	

		<!-- New variations -->
		<item name="jaVehicle4x4TruckNoChainNoSpikePlaceble">
			<property name="Extends" value="vehicleMinibikePlaceable"/>
			<property name="Meshfile" value="#@modfolder:Resources/jaJeeps.unity3d?var_Jeep_nochain_nospike"/>
			<property name="EconomicValue" value="30000"/>
			<property class="Action1">
				<property name="Vehicle" value="jaVehicle4x4TruckNoChainNoSpike"/>
				<property name="VehicleSize" value="2.5, 2.1, 5"/>
			</property>
			<effect_group name="jaVehicle4x4TruckNoChainNoSpikePlaceble" tiered="false">
				<passive_effect name="ModSlots" operation="base_set" value="4"/>
				<passive_effect name="ModPowerBonus" operation="base_add" value="300" tags="EconomicValue"/>
